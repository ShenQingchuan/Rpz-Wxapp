<!--components/news-card/news-card.wxml-->
<view class='news-card'>
	<l-card  type="primary" 
					position="right" 
					l-img-class="news-cover" 
					image="{{cover_url}}"
	title="放暑假啦~">
	<view class="news-content-container">
		<text class='news-content'>
			{{main_content}}
		</text>
		<view class='news-action'>
			点击下方<text>{{action_content}}</text>查看吧！
		</view>
	</view>
	</l-card>
</view>